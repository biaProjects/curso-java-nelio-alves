import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		
		System.out.println("Quantos nomes você quer cadastrar?");
		int quantidadeUsuarios = sc.nextInt();
		
//		System.out.println("Digite os nomes separados por vírgula:");
//		String usuarios = sc.nextLine();
		String usuarios = "Bia,Douglas";
		
		String[] vect = usuarios.split(",");
		
		for (int i=0; i<quantidadeUsuarios; i++) {
			String nome = vect[i];
			System.out.print("Nome: " + nome + " | ");
			int tamanho = nome.length();
			System.out.print("Caracteres: " + tamanho + " | ");
			
			if (tamanho <= 5) {
				System.out.printf("Nome curto%n");
			}
			else {
				System.out.printf("Nome longo%n");
			}
		}
				
		sc.close();	
	}
}